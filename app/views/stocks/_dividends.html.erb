<h3>Dividends</h3>

<%= link_to 'Add Dividend', new_stock_dividend_path(@stock) %>

<table>
  <thead>
    <tr>
      <td>Year</td>
      <td>Value ($)</td>
      <td>Actions</td>
    </tr>
  </thead>

  <tbody>
    <% @stock.dividends.each do |dividend| %>
      <tr>
        <td><%= dividend.year.year_number %></td>
        <td><%= dollar_value(dividend.value) %></td>
        <td><%= link_to 'Edit', edit_dividend_path(dividend) %> | <%= link_to 'Delete', dividend_path(dividend), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>